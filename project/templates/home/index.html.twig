{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row"></div>
		<h1 class="mt-5">Cars</h1>

		<div class="d-flex flex-wrap justify-content-between mt-3">
			{% for car in cars %}
				<div class="card mb-3" style="width: 16rem;">
					<div class="card-body">
						<h5 class="card-title">{{ car.name }}</h5>
						<h6 class="card-subtitle mb-2 text-muted">{{ car.carCategory.name }}</h6>
						<p class="card-text">{{car.cost}}$</p>
						<p class="card-text">{{ car.nbDoors}}
							Doors</p>
						<p class="card-text">{{ car.nbSeats}}
							Seats</p>
					</div>
				</div>
			{% endfor %}

		</div>
		<div class="text-center mb-5">
			<a href="{{ path('app_car') }}" class="btn btn-primary" type="button">See more</a>
		</div>
	</div>


	<script src="{{ asset('assets/js/meteo.js') }}"></script>
{% endblock %}
